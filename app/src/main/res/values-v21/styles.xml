<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeJ" parent="AppTheme">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="android:colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryBlue</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

    </style>

    <style name="SignUpTheme" parent="AppTheme">
        <item name="android:colorAccent">@color/colorAccentYellow</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkPurple</item>
        <item name="android:colorPrimary">@color/colorPrimaryPurple</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryPurple</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="profileTheme" parent="SignUpTheme"></style>

    <style name="LiftFindTheme" parent="SignUpTheme">
        <item name="android:colorAccent">@color/colorAccentBlue</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="android:colorPrimary">@color/colorPrimaryGreen</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryGreen</item>
    </style>

    <style name="LiftCreateTheme" parent="SignUpTheme">
        <item name="android:colorAccent">@color/colorAccentGreen</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="android:colorPrimary">@color/colorPrimaryBlue</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryBlue</item>
    </style>

    <style name="font_styleBlue" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#0D47A1</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="font_stylePurple" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#7B1FA2</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="floatingbtn" parent="Widget.Design.FloatingActionButton">
        <item name="android:colorAccent">#00E676</item>
    </style>

    <style name="ProfileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9c27b0</item>
        <item name="colorPrimaryDark">#7b1fa2</item>
        <item name="colorAccent">#00E676</item>
        <item name="android:colorControlHighlight">#9c27b0</item>
    </style>

    <style name="createLiftTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#00E676</item>
        <item name="android:colorControlHighlight">#2196F3</item>
    </style>

</resources>