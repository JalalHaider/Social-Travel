<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp.materialtabs.LiftCreatePack.HomeCreateLiftFragment">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/offer_lift_ic" />

        <ImageView
            android:layout_gravity="right"
            android:clickable="true"
            android:onClick="gotoFindLiftBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/search_ic" />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/blue_nodetonode" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/wherefrom"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:backgroundTint="@color/colorPrimaryBlue"
                    android:hint="Where From"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">

                <AutoCompleteTextView
                    android:id="@+id/whereTo"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:backgroundTint="@color/colorPrimaryBlue"
                    android:hint="where To"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/offer_Lift_button"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/custome_bg_pink"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/go_btn_ic"
        android:clickable="true"
        android:onClick="offerLiftBtn"/>
</LinearLayout>
